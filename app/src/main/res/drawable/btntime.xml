<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default state -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#8fff"/>
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp"/>
            <size android:width="226dp" android:height="55dp"/>
            <corners android:radius="7dp"/>
            <stroke android:width="1dp" android:color="#00684E"/>
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#green"/>
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp"/>
            <size android:width="226dp" android:height="55dp"/>
            <corners android:radius="7dp"/>
            <stroke android:width="1dp" android:color="red"/>
        </shape>
    </item>

</selector>
