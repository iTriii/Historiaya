<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:textAlignment="center"
    android:background="#E1FAFF"
    tools:context=".BookNowCancellation">


        <ImageView
            android:id="@+id/clouds"
            android:layout_width="536dp"
            android:layout_height="430dp"
            android:layout_marginBottom="232dp"
            android:contentDescription="@string/clouds"
            app:layout_constraintBottom_toBottomOf="@+id/rizal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/cloud" />

        <ImageView
            android:id="@+id/rizal"
            android:layout_width="420dp"
            android:layout_height="452dp"
            android:layout_marginTop="212dp"
            android:contentDescription="@string/rizal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/newproject" />

        <ImageView
            android:id="@+id/grass"
            android:layout_width="878dp"
            android:layout_height="612dp"
            android:layout_marginTop="300dp"
            android:contentDescription="@string/grass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/grass_1" />


        <ImageView
            android:id="@+id/twopips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="316dp"
            android:contentDescription="@string/twopips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/twopips" />

    <ImageView
        android:id="@+id/blurred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".5"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectangle" />


    <TextView
        android:id="@+id/pay"
        android:layout_width="344dp"
        android:layout_height="101dp"
        android:fontFamily="@font/montserrat_alternates_extrabold"
        android:shadowColor="#FFFDFD"
        android:shadowDx="7"
        android:shadowDy="-9"
        android:shadowRadius="2"
        android:text="Cancellation/ Reschedule Form"
        android:textAlignment="center"
        android:textColor="#FEC242"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13"
        tools:ignore="TextSizeCheck" />


    <TextView
        android:id="@+id/CancellationMessage"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:textSize="15sp"
        android:textColor="@color/green"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="212dp"
        android:text="Are you sure you want to cancel your booking? Fill out this form."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/shadow"
            android:clickable="true"

            android:contentDescription="@string/BookNow"
            android:contextClickable="true"
            android:longClickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_back" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="357dp"
        android:layout_height="495dp"
        android:layout_marginTop="20dp"
        android:foregroundGravity="fill"
        app:cardCornerRadius="@dimen/fab_margin"
        app:cardMaxElevation="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/blurred"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pay"
        app:layout_constraintVertical_bias="0.595"
        app:strokeWidth="4dp">


        <TextView
            android:id="@+id/Name"
            android:layout_width="136dp"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"
            android:text="Name: "
            android:textColor="@color/green"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.336" />

        <EditText
            android:id="@+id/inputname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:hint="Enter your name here:"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/cloud"
            app:layout_constraintHorizontal_bias="0.662"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AppName" />


        <TextView
            android:id="@+id/email"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="63dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"
            android:text="E-Mail: "
            android:textColor="@color/green"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.336" />


        <EditText
            android:id="@+id/inputemail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/montserrat"
            android:hint="Enter your E-mail here:"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/cloud"
            app:layout_constraintHorizontal_bias="0.662"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AppName" />


        <TextView
            android:id="@+id/CancellationReason"
            android:layout_width="235dp"
            android:layout_height="48dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"
            android:text="Reason for Cancellation/Reschedule: "
            android:textColor="@color/green"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.336" />

        <EditText
            android:id="@+id/Reason"
            android:layout_width="315dp"
            android:layout_height="202dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="155dp"
            android:fontFamily="@font/montserrat"
            android:hint="Enter your reason here..."
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/cloud"
            app:layout_constraintHorizontal_bias="0.662"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AppName" />


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="157dp"
        android:layout_height="54dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="376dp"
        android:layout_marginBottom="156dp"
        android:width="226dp"
        android:height="55dp"
        android:background="@drawable/startbuttonbg"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:longClickable="true"
        android:text="Submit"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cardMaxElevation="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/blurred"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

