<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textAlignment="center"
    android:background="#E1FAFF"
    tools:context=".BookingDetailMain4">


        <!-- For update lang-->
        <ImageView
            android:id="@+id/clouds"
            android:layout_width="536dp"
            android:layout_height="430dp"
            android:layout_marginBottom="232dp"
            android:contentDescription="@string/clouds"
            app:layout_constraintBottom_toBottomOf="@+id/rizal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/cloud" />

        <ImageView
            android:id="@+id/rizal"
            android:layout_width="485dp"
            android:layout_height="455dp"
            android:layout_marginTop="150dp"
            android:contentDescription="@string/rizal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/newproject" />

        <ImageView
            android:id="@+id/grass"
            android:layout_width="878dp"
            android:layout_height="612dp"
            android:layout_marginTop="250dp"
            android:contentDescription="@string/grass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/grass_1" />


        <ImageView
            android:id="@+id/twopips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="316dp"
            android:contentDescription="@string/twopips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/twopips" />

        <ImageView
            android:id="@+id/blurred"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".5"
            android:contentDescription="TODO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/rectangle" />

        <ImageButton
            android:id="@+id/backbtnDetailMain"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/shadow"
            android:clickable="true"
            android:contentDescription="@string/BookNow"
            android:contextClickable="true"
            android:elevation="10dp"
            android:longClickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_back" />


        <TextView
            android:id="@+id/pay"
            android:layout_width="265dp"
            android:layout_height="36dp"
            android:layout_marginEnd="64dp"
            android:fontFamily="@font/montserrat_alternates_extrabold"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="-2"
            android:shadowRadius="2"
            android:text="Booking Details"
            android:textAlignment="center"
            android:textColor="#FEC242"
            android:textSize="23sp"
            app:layout_constraintBottom_toTopOf="@+id/rizal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/backbtnDetailMain"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.491"
            tools:ignore="TextSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/blurred"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.422">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="356dp"
                android:layout_height="450dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:foregroundGravity="fill"
                app:cardCornerRadius="@dimen/fab_margin"
                app:cardMaxElevation="70dp"
                app:layout_constraintBottom_toBottomOf="@+id/blurred"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pay"
                app:layout_constraintVertical_bias="0.595"
                app:strokeWidth="4dp">


                <ImageView
                    android:id="@+id/itineraryHouseView"
                    android:layout_width="284dp"
                    android:layout_height="185dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/don_catalino" />

                <TextView
                    android:id="@+id/pickhousetxt"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="225dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Selected House: "
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.336" />

                <TextView
                    android:id="@+id/selectedTourText"
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="225dp"
                    android:fontFamily="@font/montserrat"
                    android:text=" "
                    android:textColor="@color/green"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.336" />

                <TextView
                    android:id="@+id/amounttxt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text=" Amount: "
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.336" />


                <TextView
                    android:id="@+id/totalText"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="255dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.336" />


                <TextView
                    android:id="@+id/touristtxt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="275dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Tourists:  "
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.336" />

                <TextView
                    android:id="@+id/selectedtouristsText"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="280dp"
                    android:fontFamily="@font/montserrat"
                    android:text="  "
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.336" />

                <TextView
                    android:id="@+id/requesteddatetxt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="295dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Date: "
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.336" />

                <TextView
                    android:id="@+id/datetext"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="300dp"
                    android:fontFamily="@font/montserrat"
                    android:text=" "
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.336" />


                <ImageButton
                    android:id="@+id/cancelbtn"
                    android:layout_width="33dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="352dp"
                    android:background="@drawable/shadow"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:elevation="10dp"
                    android:longClickable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/cancel" />

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="251dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="350dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_horizontal"
                    android:text="Cancel/Refund Booking"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.336" />

                <ImageButton
                    android:id="@+id/reschedbtn"
                    android:layout_width="33dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="390dp"
                    android:background="@drawable/shadow"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:elevation="10dp"
                    android:longClickable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/calendar" />

                <TextView
                    android:id="@+id/Rescheduletxt"
                    android:layout_width="251dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="390dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_horizontal"
                    android:text="Reschedule"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.336" />


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <Button
            android:id="@+id/Donebut"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-330dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/startbuttonbg"
            android:clickable="true"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:longClickable="true"
            android:text="DONE"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:cardMaxElevation="70dp"
            app:layout_constraintBottom_toBottomOf="@+id/blurred"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
