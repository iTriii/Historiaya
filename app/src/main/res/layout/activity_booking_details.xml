<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingDetails">
    <!-- For update lang-->
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:src="@drawable/back"
        app:layout_constraintDimensionRatio="18:10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/blurred"
        android:layout_width="0dp"
        android:layout_height="900dp"
        android:alpha=".5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle" />

    <TextView
        android:id="@+id/pay"
        android:layout_width="257dp"
        android:layout_height="44dp"
        android:fontFamily="@font/montserrat_alternates_extrabold"
        android:shadowColor="#FFFDFD"
        android:shadowDx="7"
        android:shadowDy="-9"
        android:shadowRadius="2"
        android:text="Rescedule Details"
        android:textAlignment="center"
        android:textColor="#FEC242"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067"
        tools:ignore="TextSizeCheck" />

    <ImageButton
        android:id="@+id/backkk"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/shadow"
        android:clickable="true"
        android:contentDescription="@string/BookNow"
        android:contextClickable="true"
        android:elevation="10dp"
        android:longClickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back" />


    <ScrollView
        android:id="@+id/cancellationScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pay"
        app:layout_constraintVertical_bias="0.193">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="455dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="fill"
                app:cardCornerRadius="@dimen/fab_margin"
                app:cardMaxElevation="70dp"
                app:layout_constraintBottom_toBottomOf="@+id/blurred"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pay"
                app:layout_constraintVertical_bias="0.595"
                app:strokeWidth="4dp">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="323dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_alternates_extrabold"
                    android:shadowColor="#FFFDFD"
                    android:shadowDx="7"
                    android:shadowDy="-9"
                    android:shadowRadius="2"
                    android:text="@string/what_do_you_want_to_change"
                    android:textAlignment="center"
                    android:textColor="@color/GREEN"
                    android:textSize="23sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.41"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.128"
                    tools:ignore="TextSizeCheck" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="-140dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/Date"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="245dp"
                    android:fontFamily="@font/montserrat"
                    android:shadowColor="#FFFDFD"
                    android:shadowDx="7"
                    android:shadowDy="-9"
                    android:shadowRadius="2"
                    android:text="@string/date"
                    android:textAlignment="center"
                    android:textColor="@color/GREEN"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.41"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.128"
                    tools:ignore="TextSizeCheck" />

                <ImageButton
                    android:id="@+id/reschedcalendarbtn"
                    android:layout_width="162dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="245dp"
                    android:background="@drawable/btntime"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:elevation="10dp"
                    android:longClickable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/calendar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="280dp"
                    android:layout_marginTop="245dp"
                    android:layout_marginEnd="92dp"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/calendar" />

                <TextView
                    android:id="@+id/calendartextview"
                    android:layout_width="156dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="215dp"
                    android:layout_marginTop="250dp"
                    android:fontFamily="@font/montserrat"
                    android:shadowColor="#FFFDFD"
                    android:shadowDx="7"
                    android:shadowDy="-9"
                    android:shadowRadius="2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.41"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.128"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/Time"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="195dp"
                    android:fontFamily="@font/montserrat"
                    android:shadowColor="#FFFDFD"
                    android:shadowDx="7"
                    android:shadowDy="-9"
                    android:shadowRadius="2"
                    android:text="Select Time"
                    android:textAlignment="center"
                    android:textColor="@color/GREEN"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.41"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.128"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/Timetextview"
                    android:layout_width="156dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="215dp"
                    android:layout_marginTop="200dp"
                    android:fontFamily="@font/montserrat"
                    android:shadowColor="#FFFDFD"
                    android:shadowDx="7"
                    android:shadowDy="-9"
                    android:shadowRadius="2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.41"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.128"
                    tools:ignore="TextSizeCheck" />

                <ImageButton
                    android:id="@+id/reschedtimebtn"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="195dp"
                    android:background="@drawable/btntime"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:elevation="10dp"
                    android:longClickable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/timeview"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="280dp"
                    android:layout_marginTop="195dp"
                    android:layout_marginEnd="92dp"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/time" />


                <TextView
                    android:id="@+id/House"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="145dp"
                    android:fontFamily="@font/montserrat"
                    android:shadowColor="#FFFDFD"
                    android:shadowDx="7"
                    android:shadowDy="-9"
                    android:shadowRadius="2"
                    android:text="Select House"
                    android:textAlignment="center"
                    android:textColor="@color/GREEN"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.41"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.128"
                    tools:ignore="TextSizeCheck" />


                <TextView
                    android:id="@+id/totalTourists"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="105dp"
                    android:fontFamily="@font/montserrat"
                    android:shadowColor="#FFFDFD"
                    android:shadowDx="7"
                    android:shadowDy="-9"
                    android:shadowRadius="2"
                    android:text="@string/select_tourists"
                    android:textAlignment="center"
                    android:textColor="@color/GREEN"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.41"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.128"
                    tools:ignore="TextSizeCheck" />

                <Spinner
                    android:id="@+id/spinTour"
                    style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
                    android:layout_width="166dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="145dp"
                    android:background="@drawable/borderspinner"
                    android:dropDownWidth="wrap_content"
                    android:fontFamily="@font/montserrat_thin"
                    android:foregroundTint="#009688"
                    android:gravity="center"
                    android:paddingRight="2dp"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.931"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/bgbooknow"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="MissingConstraints" />

                <Spinner
                    android:id="@+id/spinNum"
                    style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
                    android:layout_width="166dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="105dp"
                    android:background="@drawable/borderspinner"
                    android:dropDownWidth="wrap_content"
                    android:fontFamily="@font/montserrat_thin"
                    android:foregroundTint="#009688"
                    android:gravity="center"
                    android:paddingEnd="2dp"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.931"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinTour"
                    app:layout_constraintVertical_bias="0.014"
                    tools:ignore="MissingConstraints" />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="90dp"
                    android:background="@color/gray" />

                <Button
                    android:id="@+id/btncancel"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="350dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cancelbg"
                    android:clickable="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="16dp"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    app:layout_constraintVertical_bias="0.95" />

                <Button
                    android:id="@+id/btnnext"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="205dp"
                    android:layout_marginTop="350dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/startbuttonbg"
                    android:clickable="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="16dp"
                    android:text="Done"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    app:layout_constraintVertical_bias="0.95" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>