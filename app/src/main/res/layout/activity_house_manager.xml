<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseManager">



    <ImageView
        android:id="@+id/clouds"
        android:layout_width="536dp"
        android:layout_height="430dp"
        android:layout_marginBottom="232dp"
        android:contentDescription="@string/clouds"
        app:layout_constraintBottom_toBottomOf="@+id/rizal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/rizal"
        android:layout_width="420dp"
        android:layout_height="452dp"
        android:layout_marginTop="212dp"
        android:contentDescription="@string/rizal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newproject" />

    <ImageView
        android:id="@+id/grass"
        android:layout_width="878dp"
        android:layout_height="612dp"
        android:layout_marginTop="300dp"
        android:contentDescription="@string/grass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grass_1" />


    <ImageView
        android:id="@+id/twopips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="316dp"
        android:contentDescription="@string/twopips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/twopips" />

    <ImageView
        android:id="@+id/blurred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".5"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectangle" />


    <TextView
        android:id="@+id/Boooking"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat_alternates_extrabold"
        android:shadowColor="#FFFDFD"
        android:shadowDx="7"
        android:shadowDy="-9"
        android:shadowRadius="2"
        android:text="Booking"
        android:textAlignment="center"
        android:textColor="#FEC242"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/SDate"
                android:layout_width="175dp"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/txtview_for_select_date"
                android:fontFamily="@font/inter_bold"
                android:maxLines="2"
                android:text="@string/select_date"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="21sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.11"
                app:layout_constraintStart_toStartOf="@+id/blurred"
                app:layout_constraintTop_toBottomOf="@+id/NumTourist"
                app:layout_constraintVertical_bias="0.048" />

            <CalendarView
                android:id="@+id/CalendarHouseManager"
                style="@android:style/Widget.DeviceDefault.CalendarView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgcalendar"
                android:clickable="true"
                android:labelFor="@id/SDate"
                android:maxDate="01/01/2025"
                android:minDate="15/11/2022"
                android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintBottom_toBottomOf="@+id/rizal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/twopips"
                app:layout_constraintVertical_bias="0.687" />

            <Button
                android:id="@+id/EditHousebtn"
                android:layout_width="168dp"
                android:layout_height="45dp"
                android:layout_marginStart="115dp"
                android:layout_marginTop="10dp"
                android:width="226dp"
                android:height="55dp"
                android:background="@drawable/startbuttonbg"
                android:clickable="true"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:longClickable="true"
                android:text="EDIT CALENDAR"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                app:cardMaxElevation="70dp" />


        </LinearLayout>
    </LinearLayout>



    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="590dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/UpcomingHouseManager_Tab"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-20dp"
            android:background="@color/transparent"
            android:button="@color/transparent"
            android:checked="true"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Upcoming"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/ProfileName"
            tools:layout_editor_absoluteX="4dp" />


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/HistoryHouseManager_tab"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="-10dp"
            android:background="@color/transparent"
            android:button="@color/transparent"
            android:checked="false"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="History"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/ProfileName"
            tools:layout_editor_absoluteX="4dp" />


    </RadioGroup>

    <View
        android:id="@+id/toHouse"
        android:layout_width="125dp"
        android:layout_height="3dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="630dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/wanHouse"
        android:layout_width="125dp"
        android:layout_height="3dp"
        android:layout_marginTop="630dp"
        android:layout_marginStart="60dp"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="@+id/radioGroup2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <ScrollView
        android:id="@+id/UpcomingHouse_ScrollView"
        android:layout_width="382dp"
        android:layout_height="150dp"
        android:layout_marginTop="-10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        android:foregroundGravity="fill"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2">



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/UpcomingHouseMager_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>


    <ScrollView
        android:id="@+id/HistoryHouse_ScrollView"
        android:layout_width="382dp"
        android:layout_height="188dp"
        android:layout_marginTop="-20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/HistoryHouseManager_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>