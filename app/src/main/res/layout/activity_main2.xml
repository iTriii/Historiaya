<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1FAFF"
    android:orientation="vertical"
    android:id="@+id/main2"
    tools:context=".Main2">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:src="@drawable/back"
        app:layout_constraintDimensionRatio="18:15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/blurred"
        android:layout_width="0dp"
        android:layout_height="900dp"
        android:alpha=".5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle" />



    <ImageButton
        android:id="@+id/Profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/shadow"
        android:clickable="true"
        android:elevation="10dp"
        android:longClickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/human_icon2" />

    <ImageView
        android:id="@+id/notif"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/shadow"
        android:clickable="true"
        android:elevation="10dp"
        android:longClickable="true"
        app:layout_constraintEnd_toStartOf="@+id/Profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notifications" />

    <TextView
        android:id="@+id/AppName"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/montserrat_alternates_extrabold"
        android:text="@string/AppName"
        android:textAlignment="center"
        android:textColor="@color/appname"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/startbuttonbg_ok"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:longClickable="true"
        android:text="@string/Start"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AppName" />

    <TextView
        android:id="@+id/BookNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/startbuttonbg_ok"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:longClickable="true"
        android:text="@string/BookNow"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Start" />

    <TextView
        android:id="@+id/Store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/startbuttonbg_ok"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:longClickable="true"
        android:text="@string/Store"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BookNow" />

    <TextView
        android:id="@+id/Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/startbuttonbg_ok"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:longClickable="true"
        android:text="@string/Map"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Store" />

    <ImageView
        android:id="@+id/EditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="132dp"
        android:background="@drawable/circle"
        android:clickable="true"
        android:longClickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Map"
        app:srcCompat="@drawable/settings_24" />

    <ImageView
        android:id="@+id/Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/circle"
        android:clickable="true"
        android:longClickable="true"
        app:layout_constraintEnd_toStartOf="@+id/EditProfile"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Map"
        app:srcCompat="@drawable/share_24" />

    <LinearLayout
        android:id="@+id/ShareApp"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@drawable/shareapp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73">

        <TextView
            android:id="@+id/AppLink"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/sharelink"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/Sharelink" />

        <Button
            android:id="@+id/copylink"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/copylink" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/settings_popup"
        android:layout_width="338dp"
        android:layout_height="326dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/green"
            android:fontFamily="@font/montserrat_bold"
            android:forceHasOverlappingRendering="true"
            android:padding="8dp"
            android:text="@string/Settings"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <View
            android:layout_width="338dp"
            android:layout_height="1dp"
            android:layout_marginTop="130dp"
            android:background="#80000000" />

        <TextView
            android:id="@+id/Tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/Tutorial"
            android:textColor="@color/green"
            android:textSize="17sp" />

        <Switch
            android:id="@+id/audio"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="70dp"
            android:clickable="true"
            android:textAlignment="center"
            android:thumbTint="#00684E"
            android:trackTint="#4E3535"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/Audio_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/audio"
            android:textColor="@color/green"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/Tutorial1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/tutorial" />

        <ImageView
            android:id="@+id/Speaker"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="70dp"
            android:visibility="visible"
            app:srcCompat="@drawable/audio" />

        <ImageView
            android:id="@+id/Speaker_off"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="70dp"
            android:visibility="gone"
            app:srcCompat="@drawable/speaker_off" />

        <Button
            android:id="@+id/PrivacyandTerms"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="82dp"
            android:backgroundTint="#00A197"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/PrivacyandTerms"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/Credits"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="82dp"
            android:backgroundTint="#00A197"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/Credits"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/Feedback"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="82dp"
            android:backgroundTint="#00A197"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/Feedback"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/Logout"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="82dp"
            android:backgroundTint="#FEC242"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/LogOut"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Notifications"
        android:layout_width="338dp"
        android:layout_height="289dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242">

        <TextView
            android:id="@+id/Notif"
            android:layout_width="338dp"
            android:layout_height="38dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/notif"
            android:fontFamily="@font/montserrat_bold"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:text="@string/Notifications"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/MarkAllAsRead"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingTop="10dp"
            android:text="@string/Mark"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ViewNotif"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="250dp"
            android:clickable="true"
            android:fontFamily="@font/montserrat"
            android:linksClickable="true"
            android:longClickable="true"
            android:text="@string/View"
            android:textAlignment="center"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>