<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E1FAFF"
    android:orientation="vertical"
    tools:context=".PaymentDetails">



    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/shadow"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back" />

    <ImageButton
        android:id="@+id/chatbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="-43dp"
        android:background="@drawable/shadow"
        android:clickable="true"
        android:elevation="10dp"
        android:longClickable="true"
        android:contextClickable="true"
        app:srcCompat="@drawable/chat" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DonCatalino_Tab"
            android:layout_width="200dp"
            android:layout_height="68dp"
            android:background="@drawable/don_button"
            android:gravity="center_horizontal"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="-4"
            android:shadowRadius="2"
            android:text="Don Catalino"
            android:textColor="#FEC242"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/GalaRodriguez_Tab"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/gala_button"
            android:gravity="center_horizontal"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="-4"
            android:shadowRadius="2"
            android:text="Gala Rodriguez"
            android:textColor="#FEC242"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/cloud"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:contentDescription="@string/clouds"
            app:srcCompat="@drawable/cloud" />

    </LinearLayout>

</LinearLayout>