<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1FAFF"
    android:orientation="vertical"
    tools:context=".PaymentDetails">


    <ImageView
        android:id="@+id/rizal_Start"
        android:layout_width="match_parent"
        android:layout_height="1024dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        app:srcCompat="@drawable/newproject"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/grass_start"
        android:layout_width="match_parent"
        android:layout_height="1024dp"
        android:layout_marginTop="184dp"
        android:alpha=".95"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grass_1" />

    <ImageView
        android:id="@+id/twoppl"
        android:layout_width="match_parent"
        android:layout_height="1024dp"
        android:layout_marginTop="180dp"
        android:alpha=".89"
        app:layout_constraintEnd_toEndOf="@+id/grass_start"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backdrop" />


    <!-- Payment Items -->


    <ImageView
        android:id="@+id/blurred"
        android:layout_width="match_parent"
        android:layout_height="1024dp"
        android:alpha=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/rectangle" />

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/shadow"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back" />


    <ImageButton
        android:id="@+id/chatbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/shadow"
        android:clickable="true"
        android:contextClickable="true"
        android:elevation="10dp"
        android:longClickable="true"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/chat" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/DonCat_Radio"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:button="@color/transparent"
            android:checked="true"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Don Catalino"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/ProfileName"
            tools:layout_editor_absoluteX="4dp" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/Gala_Radio"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:background="@color/transparent"
            android:button="@color/transparent"
            android:checked="false"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Gala Rodriguez"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/ProfileName"
            tools:layout_editor_absoluteX="4dp" />
    </RadioGroup>
        <View
            android:id="@+id/lineone"
            android:layout_width="159dp"
            android:layout_height="3dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="145dp"
            android:background="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/linetwo"
        android:layout_width="159dp"
        android:layout_height="3dp"
        android:layout_marginTop="145dp"
        android:background="@color/green"
        android:layout_marginLeft="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ScrollViewDonCata"
        android:layout_width="388dp"
        android:layout_height="597dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="651dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewDonCata"
                    android:layout_width="270dp"
                    android:layout_height="321dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="60dp"
                    android:backgroundTint="@color/green3"
                    android:foregroundGravity="center_vertical">

                    <ImageView
                        android:id="@+id/gcashDonCata"
                        android:layout_width="234dp"
                        android:layout_height="296dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/qrcodegcash"
                        android:scaleType="center" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/scanme2"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="102dp"
                    android:layout_marginTop="-360dp"
                    android:fontFamily="@font/montserrat_alternates_extrabold"
                    android:shadowColor="@color/black"
                    android:shadowDx="6"
                    android:shadowDy="-2"
                    android:shadowRadius="2"
                    android:text="Scan to Pay"
                    android:textColor="#FEC242"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/Note"
                    android:layout_width="388dp"
                    android:layout_height="78dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="360dp"
                    android:fontFamily="@font/montserrat_alternates_extrabold"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="-2"
                    android:shadowRadius="2"
                    android:text="Dear Tourists Scan this QR for payment in Gala Rodriguez house "
                    android:textColor="#FEC242"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/donebtn"
                    android:layout_width="221dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="86dp"
                    android:layout_marginTop="10dp"
                    android:width="226dp"
                    android:height="55dp"
                    android:background="@drawable/startbuttonbg"
                    android:clickable="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="Done"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:id="@+id/ScrollViewGalaRod"
        android:layout_width="388dp"
        android:layout_height="597dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="651dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/GalaCardView"
                android:layout_width="270dp"
                android:layout_height="321dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/green3"
                android:foregroundGravity="center_vertical">

                <ImageView
                    android:id="@+id/gcashGala"
                    android:layout_width="234dp"
                    android:layout_height="296dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/qrcodegcash"
                    android:scaleType="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/scanme"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="102dp"
                android:layout_marginTop="-355dp"
                android:fontFamily="@font/montserrat_alternates_extrabold"
                android:shadowColor="@color/green3"
                android:shadowDx="6"
                android:shadowDy="-7"
                android:shadowRadius="2"
                android:text="Scan to Pay"
                android:textColor="#FEC242"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/Note2"
                android:layout_width="324dp"
                android:layout_height="119dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="360dp"
                android:fontFamily="@font/montserrat_alternates_extrabold"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="-2"
                android:shadowRadius="2"
                android:text="Dear Tourists: Scan this QR for payment in DonCatalino House "
                android:textColor="#FEC242"
                android:textSize="20sp" />

            <Button
                android:id="@+id/donebtn2"
                android:layout_width="221dp"
                android:layout_height="54dp"
                android:layout_marginLeft="86dp"
                android:layout_marginTop="-60dp"
                android:width="226dp"
                android:height="55dp"
                android:background="@drawable/startbuttonbg"
                android:clickable="true"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Done"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>