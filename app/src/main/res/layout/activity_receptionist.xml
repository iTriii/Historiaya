<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Receptionist">



    <ImageView
        android:id="@+id/clouds"
        android:layout_width="536dp"
        android:layout_height="430dp"
        android:layout_marginBottom="232dp"
        android:contentDescription="@string/clouds"
        app:layout_constraintBottom_toBottomOf="@+id/rizal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/rizal"
        android:layout_width="420dp"
        android:layout_height="452dp"
        android:layout_marginTop="212dp"
        android:contentDescription="@string/rizal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newproject" />

    <ImageView
        android:id="@+id/grass"
        android:layout_width="878dp"
        android:layout_height="612dp"
        android:layout_marginTop="300dp"
        android:contentDescription="@string/grass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grass_1" />


    <ImageView
        android:id="@+id/twopips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="316dp"
        android:contentDescription="@string/twopips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/twopips" />

    <ImageView
        android:id="@+id/blurred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".5"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectangle" />


    <TextView
        android:id="@+id/pay"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:fontFamily="@font/montserrat_alternates_extrabold"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="-2"
        android:shadowRadius="2"
        android:text="Booking"
        android:textAlignment="center"
        android:textColor="#FEC242"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        tools:ignore="TextSizeCheck" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SDate"
                android:layout_width="175dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="95dp"
                android:contentDescription="@string/txtview_for_select_date"
                android:fontFamily="@font/inter_bold"
                android:maxLines="2"
                android:text="@string/select_date"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="23sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.11"
                app:layout_constraintStart_toStartOf="@+id/blurred"
                app:layout_constraintTop_toBottomOf="@+id/NumTourist"
                app:layout_constraintVertical_bias="0.048" />

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginStart="-200dp">

                <ImageView
                    android:id="@+id/imageViewCalendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_centerInParent="true"
                    android:layout_margin="16dp"/>

            </RelativeLayout>
            <Button
                android:id="@+id/uploadImageTH_btn"
                android:layout_width="168dp"
                android:layout_height="45dp"
                android:layout_marginLeft="-270dp"
                android:layout_marginTop="480dp"
                android:width="226dp"
                android:backgroundTint="#00A197"
                android:clickable="true"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:longClickable="true"
                android:text="Upload"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                app:cardMaxElevation="70dp"
                app:layout_constraintBottom_toBottomOf="@+id/blurred"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.631"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardView"
                app:layout_constraintVertical_bias="1.0" />

        </LinearLayout>
    </LinearLayout>



    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="530dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/UpcomingRecep_Tab"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-110dp"
            android:background="@color/transparent"
            android:button="@color/transparent"
            android:checked="true"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Upcoming"
            android:layout_marginEnd="25dp"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/ProfileName"
            tools:layout_editor_absoluteX="4dp" />


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/HistoryRecep_tab"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-100dp"
            android:background="@color/transparent"
            android:button="@color/transparent"
            android:checked="false"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="History"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/ProfileName"
            tools:layout_editor_absoluteX="4dp" />

    </RadioGroup>

    <View

        android:id="@+id/toRecep"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="565dp"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/wanRecep"
        android:layout_width="120dp"
        android:layout_height="3dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="565dp"
        android:background="@color/green"
        android:layout_marginEnd="5dp"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <ScrollView
        android:id="@+id/Upcoming_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_marginTop="-40dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        app:layout_constraintVertical_bias="1.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ReceptionistUpcoming_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <ScrollView
        android:id="@+id/History_ScrollView"
        android:layout_width="391dp"
        android:layout_height="276dp"
        android:layout_marginTop="-20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        app:layout_constraintVertical_bias="1.0">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ReceptionistHistory_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>