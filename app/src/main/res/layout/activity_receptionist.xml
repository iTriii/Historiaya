<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Receptionist">



    <ImageView
        android:id="@+id/clouds"
        android:layout_width="536dp"
        android:layout_height="430dp"
        android:layout_marginBottom="232dp"
        android:contentDescription="@string/clouds"
        app:layout_constraintBottom_toBottomOf="@+id/rizal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/rizal"
        android:layout_width="420dp"
        android:layout_height="452dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/rizal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newproject" />

    <ImageView
        android:id="@+id/grass"
        android:layout_width="878dp"
        android:layout_height="612dp"
        android:layout_marginTop="200dp"
        android:contentDescription="@string/grass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grass_1" />


    <ImageView
        android:id="@+id/twopips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:contentDescription="@string/twopips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/twopips" />

    <ImageView
        android:id="@+id/blurred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".5"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectangle" />


    <TextView
        android:id="@+id/pay"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:fontFamily="@font/montserrat_alternates_extrabold"
        android:text="Booking"
        android:textAlignment="center"
        android:textColor="#FEC242"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        tools:ignore="TextSizeCheck" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Event_Sched"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="50dp"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/calendarV"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="-150dp"
                android:layout_marginEnd="92dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/event_sched" />

        </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/UpcomingRecep_Tab"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-100dp"
            android:background="@color/transparent"
            android:button="@color/transparent"
            android:checked="true"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Upcoming"
            android:layout_marginEnd="25dp"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/ProfileName"
            tools:layout_editor_absoluteX="4dp" />


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/HistoryRecep_tab"
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-100dp"
            android:background="@color/transparent"
            android:button="@color/transparent"
            android:checked="false"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="History"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/ProfileName"
            tools:layout_editor_absoluteX="4dp" />

    </RadioGroup>

    <View

        android:id="@+id/toRecep"
        android:layout_width="120dp"
        android:layout_height="3dp"
        android:layout_marginStart="230dp"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/wanRecep"
        android:layout_width="120dp"
        android:layout_height="3dp"
        android:layout_marginStart="65dp"
        android:background="@color/green"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <ScrollView
        android:id="@+id/Upcoming_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        app:layout_constraintVertical_bias="1.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ReceptionistUpcoming_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <ScrollView
        android:id="@+id/History_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        app:layout_constraintVertical_bias="1.0">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ReceptionistHistory_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>