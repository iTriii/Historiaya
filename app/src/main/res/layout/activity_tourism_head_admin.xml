<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TourismHeadAdmin">


    <ImageView
        android:id="@+id/clouds"
        android:layout_width="536dp"
        android:layout_height="430dp"
        android:layout_marginBottom="232dp"
        android:contentDescription="@string/clouds"
        app:layout_constraintBottom_toBottomOf="@+id/rizal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/rizal"
        android:layout_width="420dp"
        android:layout_height="452dp"
        android:layout_marginTop="212dp"
        android:contentDescription="@string/rizal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newproject" />

    <ImageView
        android:id="@+id/grass"
        android:layout_width="878dp"
        android:layout_height="612dp"
        android:layout_marginTop="300dp"
        android:contentDescription="@string/grass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grass_1" />


    <ImageView
        android:id="@+id/twopips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="316dp"
        android:contentDescription="@string/twopips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/twopips" />

    <ImageView
        android:id="@+id/blurred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".5"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectangle" />


    <TextView
        android:id="@+id/TITLEBOOKING"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/montserrat_alternates_extrabold"
        android:shadowColor="#FFFDFD"
        android:shadowDx="7"
        android:shadowDy="-9"
        android:shadowRadius="2"
        android:text="Booking"
        android:textAlignment="center"
        android:textColor="#FEC242"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clouds" />

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="859dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="105dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-200dp">


                    <ImageView
                        android:id="@+id/eventSched"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="240dp"
                        android:layout_marginTop="95dp"
                        android:background="@color/white" />

                    <ImageView
                        android:id="@+id/addTM"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="-190dp"
                        android:layout_marginTop="150dp"
                        android:src="@drawable/add" />

                </LinearLayout>


                <Button
                    android:id="@+id/uploadImageTH_btn"
                    android:layout_width="168dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="-280dp"
                    android:layout_marginTop="350dp"
                    android:backgroundTint="#00A197"
                    android:clickable="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:longClickable="true"
                    android:text="Upload"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    app:cardMaxElevation="70dp"
                    app:layout_constraintBottom_toBottomOf="@+id/blurred"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.631"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cardView"
                    app:layout_constraintVertical_bias="1.0" />

            </LinearLayout>

             <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="412dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/Upcoming_Tab"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="-5dp"
                    android:background="@color/transparent"
                    android:button="@color/transparent"
                    android:checked="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Upcoming"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@+id/ProfileName"
                    tools:layout_editor_absoluteX="4dp" />


                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/History_tab"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="-10dp"
                    android:background="@color/transparent"
                    android:button="@color/transparent"
                    android:checked="false"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="History"
                    android:clickable="true"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@+id/ProfileName"
                    tools:layout_editor_absoluteX="4dp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/Pending_Tab"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/transparent"
                    android:button="@color/transparent"
                    android:checked="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:clickable="true"
                    android:text="@string/pending"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@+id/ProfileName"
                    tools:layout_editor_absoluteX="4dp" />
            </RadioGroup>

            </RadioGroup>

           <View
                android:id="@+id/wan"
                android:layout_width="120dp"
                android:layout_height="3dp"
                android:layout_marginStart="-130dp"
                android:background="@color/green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/to"
                android:layout_width="120dp"
                android:layout_height="3dp"
                android:background="@color/green"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="-3dp"
                app:layout_constraintEnd_toStartOf="@+id/tre"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toEndOf="@+id/wan"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/tre"
                android:layout_width="120dp"
                android:layout_height="3dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="-3dp"
                android:background="@color/green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <!--            Upcoming scrollview and recyler view-->

            <ScrollView
                android:id="@+id/Upcoming_ScrollView"
                android:layout_width="match_parent"
                android:layout_height="3000dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup2">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Upcoming_RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </ScrollView>

            <!--            History scrollview and recycler view-->
            <ScrollView
                android:id="@+id/History_ScrollView"
                android:layout_width="match_parent"
                android:layout_height="3300dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup2">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/History_RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </ScrollView>

            <!--            pending scrollview and recyclerview-->

            <ScrollView
                android:id="@+id/Pending_ScrollView"
                android:layout_width="match_parent"
                android:layout_height="3000dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup2">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Pending_RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </ScrollView>

        
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
