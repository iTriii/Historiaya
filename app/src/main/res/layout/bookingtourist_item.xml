                                android:layout_height="wrap_content"
                                android:layout_marginLeft="110dp"
                                android:layout_marginTop="77dp"
                                android:fontFamily="@font/montserrat"
                                android:text="Status:"
                                android:textColor="@color/GREEN"
                                android:textSize="15sp" />

                            <Button
