                                android:layout_marginLeft="110dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/montserrat_alternates_extrabold"
                                android:textColor="@color/GREEN"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
