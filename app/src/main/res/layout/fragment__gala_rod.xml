<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E1FAFF"
    tools:context=".fragment_GalaRod">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="match_parent"
        android:layout_height="1024dp"
        android:contentDescription="@string/clouds"
        app:layout_constraintHorizontal_bias="0.523"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/Gala"
        android:layout_width="201dp"
        android:layout_height="73dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/gala_rodriguez1"
        android:scaleType="center" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewGalaRod"
        android:layout_width="264dp"
        android:layout_height="317dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/green3"
        android:foregroundGravity="center_vertical">

        <ImageView
            android:id="@+id/gcashGalaRod"
            android:layout_width="234dp"
            android:layout_height="296dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/qrcodegcash"
            android:scaleType="center" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/scanme2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_alternates_extrabold"
        android:shadowColor="@color/green3"
        android:shadowDx="6"
        android:shadowDy="-7"
        android:shadowRadius="2"
        android:text="Scan to Pay"
        android:textColor="#FEC242"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/Note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="420dp"
        android:fontFamily="@font/montserrat_alternates_extrabold"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="-2"
        android:shadowRadius="2"
        android:text="Dear Tourists "
        android:textColor="#FEC242"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/Paalala"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="480dp"
        android:fontFamily="@font/montserrat"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="-2"
        android:shadowRadius="2"
        android:text="Review the name and amount carefully before sending; Upload your proof of payment"
        android:textColor="#FEC242"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Paalala2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="550dp"
        android:fontFamily="@font/montserrat"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="-2"
        android:shadowRadius="2"
        android:text="Thank You!"
        android:textColor="#FEC242"
        android:textSize="18sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/donebtn"
        android:layout_width="221dp"
        android:layout_height="54dp"
        android:layout_marginLeft="86dp"
        android:width="226dp"
        android:height="55dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/startbuttonbg"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Done"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</FrameLayout>