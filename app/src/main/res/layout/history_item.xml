<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp">

            <TextView
                android:id="@+id/MontHistoText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="107dp"
                android:layout_marginStart="-150dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/shadow"
                android:padding="5dp"
                android:src="@drawable/don_catalino1" />

            <TextView
                android:id="@+id/BahayHistoText"
                android:layout_width="152dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#000000"
                android:textSize="13sp" />

            <Button
                android:id="@+id/done"
                android:layout_width="105dp"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="-40dp"
                android:background="@drawable/ongoing"
                android:clickable="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="Done"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:ignore="SmallSp" />


            <TextView
                android:id="@+id/bookeby"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="-260dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:text="Booked_by:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookebyNameHistory"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="Leah Sulongsawa"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="-260dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/montserrat"
                android:text="No of Tourists:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TotalNumberHistory"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/housePending"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="-260dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/montserrat"
                android:text="House:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SelectedHouseHistory"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/Amount"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="-260dp"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/montserrat"
                android:text="Amount:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/AmountHistory"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
</androidx.cardview.widget.CardView>