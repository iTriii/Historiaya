<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="230dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PendingMonthText"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-90dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#000000"
                android:textSize="19sp" />


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="107dp"
                android:layout_marginStart="-180dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shadow"
                android:padding="5dp"
                android:src="@drawable/don_catalino1" />

            <TextView
                android:id="@+id/BahayPendingText"
                android:layout_width="152dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:layout_marginTop="-50dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ArawPendingText"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-160dp"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/approvedbtn"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/ongoing"
                android:backgroundTint="#00A197"
                android:clickable="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="approve"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/rejectdbtn"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginStart="-85dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/reject"
                android:clickable="true"
                android:fontFamily="@font/montserrat_bold"
                android:text="Reject"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:ignore="SmallSp" />


            <TextView
                android:id="@+id/bookeby"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="-230dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:text="Booked_by:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bookebyNamePending"
                android:layout_width="145dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:text="# of_tourists:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TotalNumberPending"
                android:layout_width="121dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/housePending"
                android:layout_width="79dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="-220dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/montserrat"
                android:text="House:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/SelectedHousePending"
                android:layout_width="124dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>