<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MontHistoRecepText"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-90dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/november"
                android:textColor="#000000"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="104dp"
                android:layout_height="98dp"
                android:layout_marginStart="-230dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shadow"
                android:padding="5dp"
                android:src="@drawable/don_catalino1" />

            <TextView
                android:id="@+id/BahayHistoRecepText"
                android:layout_width="220dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-40dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/don_catalino_rodriguez_house"
                android:textColor="#000000"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/ArawHistoRecepText"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="-230dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"

                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bookeby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-290dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/montserrat"
                android:text="Booked_by:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookebyNameReceptionist_History"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-320dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/montserrat"
                android:text="# of_tourists:"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TotalNumberReceptionist_History"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/housePending"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-270dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/montserrat"
                android:text="House:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SelectedHouseReceptionist_History"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>