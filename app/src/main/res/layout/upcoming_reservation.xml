<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp">

    <!--    For Update only-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MonthHouseManagerText"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-75dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/november"
            android:textColor="#000000"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="113dp"
                android:layout_height="112dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/shadow"
                android:padding="5dp"
                android:src="@drawable/don_catalino1" />

            <TextView
                android:id="@+id/BahayHouseManagerText"
                android:layout_width="232dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="65dp"
                android:layout_marginTop="-100dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/don_catalino_rodriguez_house"
                android:textColor="#000000"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/ArawHouseManagerText"
                android:layout_width="216dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="55dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat"
                android:text=" November 15, 2023"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/AmountHouseManagerText"
                android:layout_width="216dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="55dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat"
                android:text=" 2000"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>